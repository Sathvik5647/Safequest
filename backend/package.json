{
  "name": "@safequest/backend",
  "version": "1.0.0",
  "description": "SafeQuest backend API server with AI story generation, user authentication, TTS integration, and MongoDB data persistence",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:watch": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf node_modules && rm -rf public/images/* || rmdir /s node_modules && del /q public\\images\\*",
    "setup": "npm install && cp .env.example .env || copy .env.example .env"
  },
  "keywords": [
    "express",
    "mongodb",
    "jwt-authentication",
    "groq-ai",
    "story-generation",
    "tts-service",
    "file-upload",
    "google-oauth",
    "rest-api"
  ],
  "author": "SafeQuest Team",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "google-auth-library": "^10.4.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.3",
    "multer": "^2.0.2",
    "openai": "^5.23.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.45.0"
  }
}
